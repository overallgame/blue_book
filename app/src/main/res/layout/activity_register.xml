<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_surface"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/res_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:minHeight="?attr/actionBarSize"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:navigationIcon="@drawable/_chevron_left1"
            app:navigationIconTint="@color/md_theme_onSurface" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="手机号注册"
        android:textColor="@color/md_theme_onSurface"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/res_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:autofillHints="username"
            android:background="@drawable/shape1"
            android:hint="请输入昵称"
            android:maxLength="20"
            android:padding="10dp"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:textColorHint="@color/md_theme_outline" />

        <EditText
            android:id="@+id/res_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:autofillHints="phone"
            android:background="@drawable/shape1"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="10dp"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:textColorHint="@color/md_theme_outline" />

        <EditText
            android:id="@+id/res_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:autofillHints="password"
            android:background="@drawable/shape1"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:padding="10dp"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:textColorHint="@color/md_theme_outline" />

        <EditText
            android:id="@+id/res_password1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:autofillHints="password"
            android:background="@drawable/shape1"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:padding="10dp"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:textColorHint="@color/md_theme_outline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/res_verificationCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="4"
                android:background="@drawable/shape1"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:padding="10dp"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:textColorHint="@color/md_theme_outline" />

            <Button
                android:id="@+id/res_requestVerificationCode_button"
                style="@style/NoMaterialButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape2"
                android:text="获取验证码"
                android:textColor="@color/md_theme_onBackground" />

        </LinearLayout>

        <Button
            android:id="@+id/res_button"
            style="@style/NoMaterialButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape2"
            android:elevation="4dp"
            android:text="注册"
            android:textColor="@color/md_theme_onBackground"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>