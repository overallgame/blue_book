<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

    <FrameLayout
        android:id="@+id/video_item_gl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/black">

        <androidx.media3.ui.PlayerView
            android:id="@+id/video_item_VideoPlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/video_item_filter_toggle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="filter"
            android:src="@drawable/like_icon3" />

        <SeekBar
            android:id="@+id/video_item_filter_intensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"
            android:max="100"
            android:progress="100"
            android:visibility="gone" />

    </FrameLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="12dp">

		<TextView
			android:id="@+id/video_item_nickname"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@android:color/white"
			android:textSize="16sp"
			android:text="昵称" />

		<TextView
			android:id="@+id/video_item_description"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="6dp"
			android:maxLines="2"
			android:textColor="@android:color/white"
			android:textSize="14sp" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/video_item_love_number"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center"
				android:padding="8dp"
				android:text="0"
				android:textColor="@android:color/white" />

			<TextView
				android:id="@+id/video_item_collection_number"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center"
				android:padding="8dp"
				android:text="0"
				android:textColor="@android:color/white" />
		</LinearLayout>
	</LinearLayout>

</LinearLayout>


